<Page x:Class="TrainerApp.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainerApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="Bisque" Grid.ColumnSpan="2" Height="50">
            <TextBlock Text="CIRCUS" HorizontalAlignment="Center" FontSize="30"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:Name="BtnAmimalManagment" Content="Управление животными" Click="BtnAmimalManagment_Click"/>
            <Button x:Name="BtnSolitaire" Content="Разложить пасьянс" Click="BtnSolitaire_Click"/>

        </StackPanel>
        <Frame x:Name="MenuFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Page>
